@model SGSC.Models.Solicitacao

@{
    ViewData["Title"] = "Excluir Solicitação";
}

<h1 class="mb-4" style="color:#033666;">Excluir Solicitação</h1>

<style>
    .detalhes-container {
        background-color: #ffffff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        max-width: 800px;
        margin-bottom: 30px;
    }

        .detalhes-container h4 {
            color: #033666;
            margin-bottom: 15px;
        }

        .detalhes-container dl dt {
            font-weight: 600;
            color: #033666;
        }

        .detalhes-container dl dd {
            color: #333333;
            margin-bottom: 10px;
        }

    .btn-danger {
        background-color: #d9534f;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .btn-light {
        color: #033666;
        background-color: #f8f9fa;
        border: 1px solid #ccc;
    }

        .btn-light:hover {
            background-color: #e9ecef;
        }
</style>

<div class="detalhes-container">
    <h4>Solicitação</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Servico)</dt>
        <dd class="col-sm-9">@Model.Servico?.Nome</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NumeroProtocolo)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.NumeroProtocolo)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataCriacao)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.DataCriacao)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-light">Voltar</a>
    </form>
</div>
