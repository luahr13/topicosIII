@model SGSC.Models.Solicitacao

@{
    ViewData["Title"] = "Editar Solicitação";
}

<h1 class="mb-4" style="color:#033666;">Editar Solicitação</h1>

<style>
    .detalhes-container {
        background-color: #ffffff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        max-width: 800px;
        margin-bottom: 30px;
    }

        .detalhes-container h4 {
            color: #033666;
            margin-bottom: 15px;
        }

    .form-label {
        font-weight: 600;
        color: #033666;
    }

    .form-control, select, textarea {
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: #033666;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0252a2;
        }

    .btn-light {
        background-color: #f5f5f5;
        border: 1px solid #ccc;
        color: #033666;
    }

        .btn-light:hover {
            background-color: #e0e0e0;
        }
</style>

<div class="detalhes-container">
    <h4>Editar Solicitação</h4>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />

        <div class="mb-3">
            <label asp-for="ServicoId" class="form-label"></label>
            <select asp-for="ServicoId" class="form-control" asp-items="ViewBag.ServicoId"></select>
            <span asp-validation-for="ServicoId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Descricao" class="form-label"></label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NumeroProtocolo" class="form-label"></label>
            <input asp-for="NumeroProtocolo" class="form-control" />
            <span asp-validation-for="NumeroProtocolo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DataCriacao" class="form-label"></label>
            <input asp-for="DataCriacao" class="form-control" readonly />
            <span asp-validation-for="DataCriacao" class="text-danger"></span>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-action="Index" class="btn btn-light">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
