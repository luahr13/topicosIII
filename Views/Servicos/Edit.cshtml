@model SGSC.Models.Servico

@{
    ViewData["Title"] = "Editar Serviço";
}

<h1 style="color:#033666;">Editar Serviço</h1>

<h4>Serviço</h4>
<hr />

<style>
    /* Labels e inputs */
    label {
        font-weight: 600;
        color: #033666;
    }

    .form-control {
        border-radius: 0;
        border: 1px solid #ccc;
        margin-bottom: 10px;
    }

    /* Botões */
    .btn-primary {
        background-color: #033666;
        border-color: #033666;
        color: white;
        transition: background-color 0.2s, border-color 0.2s;
        margin-right: 10px;
    }

        .btn-primary:hover {
            background-color: #0252a2;
            border-color: #0252a2;
        }

    a.btn-back {
        color: #033666;
        text-decoration: none;
        font-weight: 500;
    }

        a.btn-back:hover {
            color: #0252a2;
            text-decoration: underline;
        }

    hr {
        border-top: 1px solid #033666;
    }
</style>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<div>
    <a asp-action="Index" class="btn-back">Voltar à lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
